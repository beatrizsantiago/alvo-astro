---
import { Image } from 'astro:assets';
import SectionWrapper from "../../layouts/SectionWrapper.astro";
import SectionTitle from "../ui/SectionTitle.astro";
import ContactRow from "../ui/ContactRow.astro";
import InstagramIcon from "../../assets/icons/instagram.png";
import YoutubeIcon from "../../assets/icons/youtube.png";
---

<section class="bg-white" id="localizacao">
  <SectionWrapper>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <div class="space-y-12">
          <div>
            <SectionTitle>
              Estamos perto de você
            </SectionTitle>
            <p class="text-gray-600 text-sm sm:text-lg">
              Visite-nos em nossa sede. Temos um lugar preparado especialmente
              para você e sua família.
            </p>
          </div>
          <div class="space-y-6">
            <ContactRow
              title="Endereço"
              subtitle="Hotel Dom Cláudio, R. Fausto Aguiar, 700 - Cambeba, Fortaleza - CE"
            >
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-orange-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
              </svg>
            </ContactRow>
            <ContactRow
              title="E-mail"
              subtitle="contato@igrejacristaalvo.com.br"
            >
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-orange-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
            </ContactRow>
          </div>
          <div>
            <p
              class="font-bold text-sm uppercase tracking-widest text-gray-400 mb-4"
            >
              Siga-nos nas redes sociais
            </p>
            <div class="flex gap-4">
              <a
                class="size-12 rounded-full border border-gray-200 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-all"
                href="https://www.instagram.com/igreja.alvo/"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Image src={InstagramIcon} alt="Instagram" class="w-6 h-6" />
              </a>
              <a
                class="size-12 rounded-full border border-gray-200 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-all"
                href="https://www.youtube.com/@igrejacristaalvo/streams"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Image src={YoutubeIcon} alt="YouTube" class="w-6 h-6" />
              </a>
            </div>
          </div>
        </div>
        <div
          class="rounded-3xl overflow-hidden shadow-2xl h-[500px] relative border-8 border-white"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3980.992189894683!2d-38.49271830000001!3d-3.8117669000000003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7c7538cbb657347%3A0x65d7077856117bb4!2sHotel%20Dom%20Cl%C3%A1udio!5e0!3m2!1spt-BR!2sbr!4v1771421912360!5m2!1spt-BR!2sbr"
            class="w-full"
            height="500"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
           
          <div
            class="absolute bottom-6 left-6 right-6 bg-white p-4 rounded-xl shadow-lg border border-gray-100"
          >
            <p class="font-bold text-primary">Igreja Alvo Sede</p>
            <p class="text-xs text-gray-500">Auditório do Hotel Dom Cláudio</p>
          </div>
        </div>
      </div>
    </div>
  </SectionWrapper>
</section>
