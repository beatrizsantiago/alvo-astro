---
import { Image } from "astro:assets";

const { title, icon } = Astro.props;
---

<div class="text-center space-y-4">
  <div
    class="size-20 bg-amber-900/10 rounded-full flex items-center justify-center text-amber-950 mx-auto mb-6"
  >
    <Image src={icon} alt={title} class="w-12 h-12" />
  </div>
  <h4 class="text-xl sm:text-2xl font-bold">{title}</h4>
  <p class="text-sm md:text-base text-gray-600 leading-relaxed max-w-sm mx-auto">
    <slot />
  </p>
</div>